/**index.wxss**/

page {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  font-family: "San Francisco",
                 "Segoe UI",
                 "droid Sans",
                 "Helvetica Neue",
                 "Helvetica",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "Arial",
                 "sans-serif";
  -webkit-overflow-scrolling: touch;
  -webkit-text-size-adjust: 100%;
  -webkit-touch-callout: none;
}

.index-top {
  width: 100%;
  padding: 20rpx 5%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.index-release {
  font-size: 26rpx;
  padding: 6rpx 10rpx;
  border: 1rpx solid blue;
  border-radius: 4rpx;
}

.index-search {
  width: 100rpx;
  height: 50rpx;
  font-size: 26rpx;
  border: 1rpx solid #ccc;
  padding: 4rpx 0;
  border-radius: 30rpx;
  display: block;
}

.index-search:focus {
  width: 300rpx;
}

.inddex-view {
  padding-bottom: 100rpx;
  overflow: auto;
}

.inddex-content {
  width: 90%;
  padding: 20rpx 0;
  margin: 0 5%;
  box-sizing: border-box;
  display: flex;
  /* align-items: center; */
  border-bottom: 1rpx solid #f0f0f0;
}

.content-left-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.index-content-center {
  flex: 1;
  font-size: 32rpx;
  margin: 0 20rpx;
}

.content-center-top {
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-center-bottom {
  font-size: 26rpx;
}

.content-center-message {
  color: #666;
  margin-left: 20rpx;
}

.content-right-btn {
  color: blue;
  border: 2rpx solid blue;
  border-radius: 4rpx;
  padding: 6rpx;
  margin-bottom: 10rpx;
}

.content-right-btn-color {
  color: red;
  border: 2rpx solid red;
}

/*index-bottom*/

.index-bottom {
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 1rpx solid #9b9b9b;
  background: #fff;
}

.index-bottom-content {
  font-size: 24rpx;
  color: #9b9b9b;
  flex: 1;
  text-align: center;
}

.bottom-content-icon {
  width: 50rpx;
  height: 50rpx;
}
