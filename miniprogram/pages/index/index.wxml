<!--index.wxml-->
<view class='index-template'>
  <image class='index-template-img' mode='aspectFill' src='/images/index.jpg'></image>
  <view class='index-template-text'>通勤族必备工具，没有之一</view>
</view>
<view class='index'>
  <view class='index-top'>
    <!-- <image class='index-top-back' mode='aspectFit' src='../images/back-white.svg'></image> -->
    <!-- <view class='index-release' bindtap="onAdd">发布拼车</view> -->
    <view class='index-top-time' bindtap='searchByTime'>{{timeText}}</view>
    <view class='search'>
      <input class='index-search' placeholder='search' bindinput="bindSearchChange"></input>
      <image class='search-icon' src='/images/search.png'></image>
    </view>
  </view>
  <view class='inddex-view'>
    <!-- 车主发布的行程 -->
    <view wx:for="{{ownerRouteList}}" class='inddex-content inddex-content-current' wx:key="key" bindtap="{{item.status !== '-9'?'viewOwnerRoute':''}}" data-index="{{index}}">
      <view class='index-content-left'>
        <image class='content-left-avatar' mode='aspectFill' src='{{item.avatarUrl}}'></image>
      </view>
      <view class='index-content-center'>
        <view class='content-center-top'>
          <view>
            <text>{{item.nickName}}</text>
            <text wx:if="{{item.status === '-9'}}" class='content-center-message'>({{item.gmtCreated}})</text>
            <text wx:if="{{item.status !== '-9'}}" class='content-center-message'>({{item.startTime}})</text>
            <text wx:if="{{item.status !== '-9'}}">¥ {{item.price}}元</text>
          </view>
          <view class='content-right-btn content-right-btn-color'>{{item.statusDesc}}√</view>
        </view>
        <view class='content-center-bottom'>{{item.passPoint}}</view>
      </view>
    </view>

    <view wx:for="{{driverRouteList}}" class='inddex-content' wx:key="key" bindtap="{{item.status !== '-9'?'viewDriverRoute':''}}" data-index="{{index}}">
      <view class='index-content-left'>
        <image class='content-left-avatar' mode='aspectFill' src='{{item.avatarUrl}}'></image>
      </view>
      <view class='index-content-center'>
        <view class='content-center-top'>
          <view class='center-top-left'>
            <text>{{item.nickName}}</text>
            <text wx:if="{{item.status === '-9'}}" class='content-center-message'>({{item.gmtCreated}})</text>
            <text wx:if="{{item.status !== '-9'}}" class='content-center-message'>({{item.startTime}})</text>
            <text wx:if="{{item.status !== '-9'}}" >¥ {{item.price}}元
            </text>
          </view>
          <view wx:if="{{item.status !== '-9'}}" class='content-right-btn content-right-btn-color'>座位：{{item.vacancy}}</view>
        </view>
        <view class='content-center-bottom'>{{item.passPoint}}</view>
      </view>
    </view>
  </view>
</view>
<view class='index-no'>暂无更多行程</view>