<view class='carMessage-top'>
  <view bindtap='goBack'>返回上一级</view>
  <view class='carMessage-top-add'>+</view>
</view>
<view class='carMessage-view'>
  <radio-group class="" bindchange="radioChange">
    <label class="commonStroke-list" wx:for="{{items}}">
      <radio value="{{item.name}}" checked="{{item.checked}}" color='#379ff8' />{{item.value}}
    </label>
  </radio-group>
  <view class='publish-list'>
    <text class='publish-list-title'>行程内容：</text>
    <view class='publish-list-content'>
      <textarea name='body' auto-height maxlength='200' placeholder='请输入行程内容' minlength="{{min}}" maxlength="{{max}}" bindinput="bindBodyChange"></textarea>
      <text class="list-content-number">{{currentWordNumber|0}}/{{max}}</text>
    </view>
  </view>
</view>