<view class='carMessage-top'>
  <view bindtap='goBack'>{{okBtn}}</view>
  <view bindtap='openAddWindow' class='carMessage-top-add' hidden="{{addBtnShow}}">+</view>
</view>
<view class='carMessage-view'>
  <radio-group class="" bindchange="radioChange" bindtap="radioClick">
    <label class="commonStroke-list" wx:for="{{items}}" wx:key='' wx:for-index="aindex">
      <radio data-aindex="{{aindex}}" value="{{aindex}}" checked="{{item.checked}}" color='#379ff8' />{{item.body}}
    </label>
  </radio-group>
  <view class='publish-list' hidden="{{hideAddContent}}">
    <text class='publish-list-title'>行程内容：</text>
    <view class='publish-list-content'>
      <textarea name='body' auto-height maxlength='200' placeholder='请输入行程内容' minlength="{{min}}" maxlength="{{max}}" bindinput="bindBodyChange" value='{{bodyValue}}'></textarea>
      <text class="list-content-number">{{currentWordNumber|0}}/{{max}}</text>
    </view>
        <button class='{{submitBtnClass}}' bindtap='saveQuickRoute'>保存</button>

  </view>
</view>