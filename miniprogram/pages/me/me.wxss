page {
  color: #333;
  background: #f8f8f8;
}

.me-top {
  width: 100%;
  padding: 24rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #eaeaea;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.me-avatar {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}

.me-name {
  font-size: 30rpx;
}

.me-account {
  font-size: 26rpx;
  margin-top: 6rpx;
}

.me-list {
  background: #fff;
  margin-top: 10px;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
}

.me-list-content {
  font-size: 32rpx;
  min-height: 68rpx;
  padding: 10rpx 40rpx 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 40rpx;
  border-bottom: 1px solid #eaeaea;
  position: relative;
}

.me-list-content:last-child {
  border-bottom: 0;
}

.list-content-arrow {
  font-size: 30rpx;
  color: #9b9b9b;
}

.list-content-arrow-icon::after {
  margin-left: 30rpx;
  right: 0;
  content: " ";
  display: inline-block;
  height: 26rpx;
  width: 16rpx;
  position: relative;
  border-radius: 0;
  background: url("data:image/png;base64,") no-repeat center center;
  background-size: 16rpx;
}

.list-content-chooseimage {
  width: 250rpx;
  position: absolute;
  right: 40rpx;
  top: 0;
  opacity: 0;
}

.me-list-img {
  text-align: center;
}

.list-content-img {
  width: 300rpx;
  height: 300rpx;
  margin: 10rpx auto;
}