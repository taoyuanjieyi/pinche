<view wx:if="{{canIUse}}">
  <view class='header'>
    <image src='../../images/logo.png'></image>
    <view class='header-title'>闲 座</view>
  </view>

  <view class='login-content'>
    <view>申请获取以下权限</view>
    <text>获得你的公开信息(昵称，头像等)</text>
  </view>

  <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo" disabled='{{getUserInfoBtnDisable}}'>
    授权登录
  </button>
</view>

<view wx:else>请升级微信版本</view>

<view class='login-tac'>
  <checkbox-group bindchange="checkboxChange">
    <label class="checkbox">
      <checkbox class='login-tac-checkbox' value="checked" />我已详细阅读并同意
    </label>
  </checkbox-group>
  <navigator class='login-tac-link' url="../tac/tac" >闲座用户协议</navigator>
</view>