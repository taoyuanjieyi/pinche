page {
  background: #eaeaea;
}

.publish {
  width: 95%;
  margin: 20rpx auto;
  background: #fff;
  border-radius: 4rpx;
  overflow: hidden;
}

.publish-list {
  font-size: 30rpx;
  color: #21292c;
  margin: 0 10rpx;
  padding: 30rpx 10rpx;
  display: flex;
  border-bottom: 1rpx solid #eaeaea;
}

.publish-list>picker {
  width: 100%;
}

.publish-list-title {
  /* line-height: 80rpx; */
  white-space: nowrap;
  display: block;
}

.publish-list-content {
  padding: 10rpx 20rpx;
  flex: 1;
  border: 1rpx solid #eaeaea;
  min-height: 120rpx;
  position: relative;
}

.publish-list-content>textarea {
  width: auto;
}

.list-content-number {
  color: #ccc;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.publish-btn {
  width: 95%;
  height: 80rpx;
  font-size: 30rpx;
  color: #379ff8;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx auto;
  background: #eaeaea;
  border-radius: 4rpx;
}

.publish-btn:active {
  background: #ccc;
}

.publish-btn-active {
  color: #fff;
  background: #379ff8;
}

.publish-btn-active:active {
  background: #2480cf;
}
