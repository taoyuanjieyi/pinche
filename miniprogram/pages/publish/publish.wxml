<form bindsubmit="formBindsubmit">
  <view class='publish'>
    <view class='publish-list'>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
        <view class="picker">
          出发日期: {{date}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
        <view class="picker">
          出发时间: {{time}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class="picker">
          剩余座位：{{array[index]}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <text class='publish-list-title'>行程内容：</text>
      <textarea name='start' class='publish-list-content' auto-height maxlength='200'></textarea>
    </view>
    <!-- <view class='publish-list'>
      <text class='publish-list-title'>车辆信息：</text>
      <textarea name='carinfo' class='publish-list-content' auto-height></textarea>
    </view>
    <view class='publish-list'>
      <text class='publish-list-title'>备注：</text>
      <textarea name='remark' class='publish-list-content' auto-height></textarea>
    </view> -->
    <button class='publish-btn' formType="submit">发布</button>
  </view>
</form>