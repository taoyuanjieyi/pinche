<form bindsubmit="formBindsubmit">
  <view class='publish'>
    <view class='publish-list'>
      <picker mode="date" value="{{date}}" start="{{minDate}}" end="2030-09-01" bindchange="bindDateChange">
        <view class="picker">
          出发日期: {{date}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker mode="time" value="{{time}}" start="{{minTime}}" end="24:00" bindchange="bindTimeChange">
        <view class="picker">
          出发时间: {{time}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker name="vacancy" bindchange="bindVacancyChange" value="{{vacancy}}" range="{{array}}">
        <view class="picker">
          剩余座位：{{array[vacancy]}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <text class='publish-list-title'>行程内容：</text>
      <textarea name='body' bindinput="bindBodyChange" class='publish-list-content' auto-height maxlength='200' placeholder="请输入行程内容" ></textarea>
    </view>
    <!-- <view class='publish-list'>
      <text class='publish-list-title'>车辆信息：</text>
      <textarea name='carinfo' class='publish-list-content' auto-height></textarea>
    </view>
    <view class='publish-list'>
      <text class='publish-list-title'>备注：</text>
      <textarea name='remark' class='publish-list-content' auto-height></textarea>
    </view> -->
    <button class='{{submitBtnClass}}' formType="submit">发布</button>
  </view>
</form>