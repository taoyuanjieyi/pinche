<form bindsubmit="formBindsubmit">
  <view class='publish'>
    <view class='publish-list'>
      <picker mode="date" value="{{date}}" start="{{minDate}}" end="2030-09-01" bindchange="bindDateChange">
        <view class="picker">
          出发日期: {{date}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker mode="time" value="{{time}}" start="{{minTime}}" end="24:00" bindchange="bindTimeChange">
        <view class="picker">
          出发时间: {{time}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker name="vacancy" bindchange="bindVacancyChange" value="{{vacancy}}" range="{{array}}">
        <view class="picker">
          剩余座位：{{array[vacancy]}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker name="color" bindchange="bindColorChange" value="{{color}}" range="{{carColor}}">
        <view class="picker">
          车辆颜色：{{carColor[color]}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <picker name="brand" bindchange="bindBrandChange" value="{{brand}}" range="{{carBrand}}">
        <view class="picker">
          车辆品牌：{{carBrand[brand]}}
        </view>
      </picker>
    </view>
    <view class='publish-list'>
      <text class='publish-list-title'>车牌号：</text>
      <textarea class='publish-list-car' name='body' auto-height></textarea>
    </view>
    <view class='publish-list'>
      <text class='publish-list-title'>行程内容：</text>
      <view class='publish-list-content'>
        <textarea name='body' auto-height maxlength='200' placeholder='请输入行程内容' minlength="{{min}}" maxlength="{{max}}" bindinput="bindBodyChange"></textarea>
        <text class="list-content-number">{{currentWordNumber|0}}/{{max}}</text>
      </view>
    </view>
    <button class='{{submitBtnClass}}' formType="submit">发布</button>
  </view>
</form>