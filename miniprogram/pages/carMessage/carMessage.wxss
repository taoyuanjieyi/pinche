page {
  background: #eaeaea;
}

.carMessage {
  background: #fff;
}

.carMessage-list {
  width: 100%;
  padding: 14rpx 5%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eaeaea;
}

.carMessage-list-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.carMessage-list-title {
  font-size: 32rpx;
  color: #379ff8;
}

.carMessage-list-message {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.carMessage-arrow::after {
  margin-left: 30rpx;
  right: 0;
  content: " ";
  display: inline-block;
  height: 26rpx;
  width: 16rpx;
  position: relative;
  border-radius: 0;
  background: url("data:image/png;base64,") no-repeat center center;
  background-size: 16rpx;
}

.commonStroke-list-nomessage {
  width: 100%;
  font-size: 32rpx;
  color: #666;
  text-align: center;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -200rpx;
}

.list-nomessage-img {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  margin-bottom: 60rpx;
}