.verification {
  color: #333;
  padding: 0 100rpx;
}

.verification-top {
  text-align: center;
}

.verification-top-logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 1rpx solid #c8c8c8;
  margin-top: 100rpx;
}

.verification-top-title {
  font-size: 36rpx;
  color: #666;
  font-weight: bold;
  margin-top: 20rpx;
}

.verification-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 100rpx;
}

.verification-number {
  border-bottom: 1rpx solid #eaeaea;
  position: relative;
  margin: 60rpx 0;
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.verification-number>input {
  font-size: 28rpx;
}

.verification-number-verification {
  flex: 1;
}

.verification-number-text {
  font-size: 28rpx;
  color: #379ff8;
}

.verification-btn {
  color: #fff;
  background: #379ff8;
  margin-top: 100rpx;
}

.verification-btn:active {
  background: #0e84e9;
}

.login-tac {
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.login-tac-checkbox {
  transform: scale(0.8);
  margin-right: 10rpx;
}

.checkbox {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}

.login-tac-link {
  color: #3b9ff7;
  border-bottom: 1rpx solid #3b9ff7;
}
